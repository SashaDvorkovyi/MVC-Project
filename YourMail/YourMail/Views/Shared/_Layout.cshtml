@using System.Threading.Tasks;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourMail</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <div class="headerBody">
            <div class="brend">YOURMAIL</div>
            @Html.Partial("_LoginPartial")
        </div>
        <div class="sidebar">
            <div class="top">
                <div class="BodyPanelTop">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "links" })
                </div>
                <div class="BodyPanelTop">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "links" })
                </div>
                <div class="BodyPanelTop">
                    @Html.ActionLink("Private", "Private", "Home", null, new { @class = "links" })
                </div>
                <div class="BodyPanelTop">
                    @Html.ActionLink("Manage", "Manage", "Account", null, new { @class = "links" })
                </div>
            </div>
            <div>
                @{Html.RenderAction("InfoFirSidePanel", "Message"); }
            </div>
        </div>
        <div class="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <div class="footer">
            <div class="cont">© 1998 − 2018</div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>